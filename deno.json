{
    "compilerOptions": {
        "strict": true
    },
    "tasks": {
        "start": "deno run --allow-net --allow-write --allow-env src/main.ts"
    },
    "lint": {
        "include": ["./**/*.ts", "./**/*.tsx"]
    },
    "fmt": {
        "include": ["./**/*.ts", "./**/*.tsx"],
        "lineWidth": 80,
        "indentWidth": 4,
        "singleQuote": true
    }
}